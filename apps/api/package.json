{
  "name": "@shortpay/api",
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm env:load tsx watch src/http/server.ts",
    "db:migrate": "pnpm env:load prisma migrate dev",
    "db:studio": "pnpm env:load prisma studio",
    "db:seed": "pnpm env:load tsx prisma/seed.ts",
    "start": "pnpm env:load node dist/http/server.js",
    "build": "tsup",
    "env:load": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@prisma/client": "5.13.0",
    "@shortpay/env": "workspace:*",
    "@shortpay/auth": "workspace:*",
    "@shortpay/utils": "workspace:*",
    "date-fns": "^4.1.0",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "fastify-raw-body": "^4.0.0",
    "fastify-type-provider-zod": "^1.1.9",
    "stripe": "^16.12.0",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@shortpay/eslint-config": "workspace:*",
    "@shortpay/prettier": "workspace:*",
    "@shortpay/tsconfig": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.12.7",
    "dotenv-cli": "^7.4.2",
    "prisma": "^5.21.1",
    "tsup": "^8.3.0",
    "tsx": "^4.7.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": "@shortpay/prettier",
  "eslintConfig": {
    "extends": [
      "@shortpay/eslint-config/node"
    ]
  }
